<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:id="@+id/home_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_bottom_bg_color"
        android:stretchColumns="0,1,2,3"
        android:layout_alignParentBottom="true">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_column="0"
            style="@style/home_bottom_container">
            <ImageButton
                android:id="@+id/home_bottom_main_button"
                style="@style/home_icon"
                android:src="@drawable/home_icon_1"/>
            <TextView
                style="@style/home_text"
                android:text="@string/home_text_1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_column="1"
            style="@style/home_bottom_container">
            <ImageButton
                android:id="@+id/home_bottom_forum_button"
                style="@style/home_icon"
                android:src="@drawable/home_icon_2"/>
            <TextView
                style="@style/home_text"
                android:text="@string/home_text_2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_column="2"
            style="@style/home_bottom_container">
            <ImageButton
                android:id="@+id/home_bottom_shoppingcart_button"
                style="@style/home_icon"
                android:src="@drawable/home_icon_3"/>
            <TextView
                style="@style/home_text"
                android:text="@string/home_text_3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_column="3"
            style="@style/home_bottom_container">
            <ImageButton
                android:id="@+id/home_bottom_profile_button"
                style="@style/home_icon"
                android:src="@drawable/home_icon_4"/>
            <TextView
                style="@style/home_text"
                android:text="@string/home_text_4"/>
        </LinearLayout>
        </TableRow>
    </TableLayout>
    <FrameLayout
        android:id="@+id/home_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/home_bottom_container">
    </FrameLayout>
</RelativeLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <!-- http://stackoverflow.com/questions/20653305/full-screen-theme-for-appcompat -->
    <style name="AppTheme.NoTitleBar.Fullscreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="home_icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingBottom">@dimen/home_bottom_icon_padding_bottom</item>
    </style>

    <style name="home_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/home_bottom_icon_padding_bottom</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/home_bottom_text_height</item>
    </style>

    <style name="home_bottom_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_icon_height</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>

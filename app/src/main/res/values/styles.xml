<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- http://stackoverflow.com/questions/20653305/full-screen-theme-for-appcompat -->
    <style name="AppTheme.NoTitleBar.Fullscreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="home_icon">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="home_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/default_textview_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/default_font_size</item>
    </style>

    <style name="home_bottom_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="home_topbar_column_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/default_minimum_gap</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="home_topbar_column_imageview">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/default_minimum_gap</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="home_topbar_column_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:textSize">@dimen/default_font_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <dimen name="default_font_size">12sp</dimen>
    <dimen name="default_textview_height">15dp</dimen>
</resources>
